<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <Style TargetType="{x:Type Control}" x:Key="FontStyle">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="TbkFontStyle">
        <Setter  Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="{x:Type TextBox}" x:Key="TbxFontStyle">
        <Setter  Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="{x:Type ComboBox}" x:Key="CmbFontStyle">
        <Setter Property="FontSize" Value="20" />
    </Style>
</ResourceDictionary>